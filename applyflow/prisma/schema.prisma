// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum Source {
  linkedin
  hh
  indeed
  telegram
  direct
  other
}

enum Status {
  saved
  applied
  screening
  test
  interview
  offer
  rejected
}

enum ContactRole {
  recruiter
  hiring_manager
  other
}

enum Priority {
  high
  medium
  low
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vacancies Vacancy[]
  applications Application[]
  contacts Contact[]
  todos Todo[]

  @@map("users")
}

model Vacancy {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  companyName String
  roleTitle   String
  link        String
  source      Source?
  salaryRange String?
  location    String?
  notes       String?

  applications Application[]

  @@map("vacancies")
}

model Application {
  id                 String   @id @default(cuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vacancyId          String
  vacancy            Vacancy  @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  status                    Status     @default(saved)
  appliedDate              DateTime?
  lastStatusChangeAt       DateTime   @default(now())
  nextStep                 String
  nextStepDueDate          DateTime?

  contacts Contact[]
  todos Todo[]

  @@map("applications")
}

model Contact {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vacancyId     String?
  vacancy       Vacancy? @relation(fields: [vacancyId], references: [id])
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  createdAt     DateTime @default(now())

  name           String
  role           ContactRole?
  email          String?
  linkedin       String?
  lastMessageAt  DateTime?
  notes          String?

  @@map("contacts")
}

model Todo {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  applicationId String?
  application   Application? @relation(fields: [applicationId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  title         String
  description   String?
  completed     Boolean  @default(false)
  priority      Priority @default(medium)
  dueDate       DateTime?

  @@map("todos")
}
